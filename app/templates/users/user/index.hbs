<div class="profile-header">
  <img class="profile-header-avatar" src={{model.userProfile.avatar}}>

  <div class="profile-header-content">
    <div class="profile-header-counters">
      <div class="profile-header-counter">
        <div class="profile-header-counter-count">{{model.userProfile.totalPosts}}</div>
        <div class="profile-header-counter-title">{{t "profile.posts"}}</div>
      </div>
      <div class="profile-header-counter">
        <div class="profile-header-counter-count">{{fa-icon "hand-lizard-o" flip="horizontal"}}</div>
        <div class="profile-header-counter-title">{{t "profile.followers"}}</div>
      </div>
      <div class="profile-header-counter">
        <div class="profile-header-counter-count">{{fa-icon "hand-lizard-o"}}</div>
        <div class="profile-header-counter-title">{{t "profile.following"}}</div>
      </div>
    </div>
    {{#paper-button raised=true primary=true class="profile-header-button"}}{{t "profile.follow"}}{{/paper-button}}
  </div>
</div>

<div class="profile-description">
  {{markdown-render model.userProfile.description}}
</div>

{{tag-summary/main
  tagSummary=model.userProfile.userTagSummary
}}
