{{timeline-item-nav/slideshow/post/panels/hover-nav
  classNames="hover-nav-left"
  direction=-0.1
  hoverScroll=(action "hoverScroll")
}}

<div data-timeline-item-id="{{timelineItemId}}" class="timeline-item-nav-slideshow-panels-carousel">
  {{#each panels as |panel|}}
    {{component panel.postNavComponent
      panel=panel
      sizes=sizes
      style=style
      openModalNav=openModalNav
    }}
  {{/each}}
</div>

{{timeline-item-nav/slideshow/post/panels/hover-nav
  classNames="hover-nav-right"
  direction=0.1
  hoverScroll=(action "hoverScroll")
}}