{{#paper-form onSubmit=(action "submit") as |form|}}
  {{#paper-list}}
    {{#paper-subheader class="md-no-sticky"}}{{t "account.changeEmail"}}{{/paper-subheader}}

    {{#paper-item}}
      {{form.input
        value=changeset.email
        type="email"
        label=(t "account.attributes.email.label")
        onChange=(action (mut changeset.email))
        errors=changeset.error.email.validation
        required="style"
      }}
    {{/paper-item}}

    {{#paper-item}}
      {{form.input
        value=changeset.password
        type="password"
        label=(t "account.attributes.password.label")
        onChange=(action (mut changeset.password))
        errors=changeset.error.password.validation
        required="style"
      }}
    {{/paper-item}}
  {{/paper-list}}

  <div class="form-controls">
    {{paper-button
      disabled=disabled
      raised=true
      primary=true
      label=(t "account.submit")
      onClick=(action "submit")
    }}
  </div>
{{/paper-form}}

{{#liquid-if succeded}}
  <div class="form-message form-message-success">{{t "account.emailChangeSuccess"}}</div>
{{else if failed}}
  <div class="form-message form-message-failure">{{failed}}</div>
{{/liquid-if}}
