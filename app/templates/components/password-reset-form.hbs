{{#paper-form onSubmit=(action "submit") as |form|}}
  {{#paper-list}}
    {{#paper-subheader class="md-no-sticky"}}{{t "account.changePassword"}}{{/paper-subheader}}

    {{#paper-item}}
      {{form.input
        value=changeset.password
        type="password"
        label=(t "account.attributes.newPassword.label")
        onChange=(action (mut changeset.password))
        errors=changeset.error.password.validation
        required="style"
      }}
    {{/paper-item}}

    {{#paper-item}}
      {{form.input
        value=changeset.passwordConfirmation
        type="password"
        label=(t "account.attributes.newPasswordConfirmation.label")
        onChange=(action (mut changeset.passwordConfirmation))
        errors=changeset.error.passwordConfirmation.validation
        required="style"
      }}
    {{/paper-item}}
  {{/paper-list}}

  <div class="form-controls">
    {{paper-button
      disabled=disabled
      raised=true
      primary=true
      label=(t "account.submit")
      onClick=(action "submit")
    }}
  </div>
{{/paper-form}}
