{{#paper-form onSubmit=(action "submit") as |form|}}
  {{#paper-list}}
    {{#paper-subheader class="md-no-sticky"}}{{t "auth.passwordResetRequest"}}{{/paper-subheader}}
    {{#paper-item}}
      {{form.input
        value=changeset.username
        autofocus=true
        label=(t "auth.usernameOrEmail")
        onChange=(action (mut changeset.username))
        errors=changeset.error.username.validation
        required="style"
      }}
    {{/paper-item}}
  {{/paper-list}}

  {{#form-controls form=form changeset=changeset cancel=(action "cancel")}}
    {{paper-button
      label=(t "auth.login")
      onClick=(action "login")
      classNames="form-controls-align-left"
    }}
  {{/form-controls}}
{{/paper-form}}
