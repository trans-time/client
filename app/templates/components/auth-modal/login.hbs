{{#paper-form onSubmit=(action "submit") as |form|}}
  {{#paper-list}}
    {{#paper-subheader class="md-no-sticky"}}{{t "auth.login"}}{{/paper-subheader}}
    {{#paper-item}}
      {{form.input
        value=changeset.username
        autofocus=true
        label=(t "users.attributes.username.label")
        onChange=(action (mut changeset.username))
        errors=changeset.error.username.validation
        required="style"
      }}
    {{/paper-item}}

    {{#paper-item}}
      {{form.input
        value=changeset.password
        type="password"
        label=(t "users.attributes.password.label")
        onChange=(action (mut changeset.password))
        errors=changeset.error.password.validation
        required="style"
      }}
    {{/paper-item}}
  {{/paper-list}}

  {{paper-button
    label=(t "auth.clickForPasswordReset")
    onClick=(action "passwordResetRequest")
    classNames="auth-form-reset-password-link"
  }}

  {{#form-controls form=form changeset=changeset cancel=(action "cancel")}}
    {{paper-button
      label=(t "auth.join")
      onClick=(action "join")
      classNames="form-controls-align-left"
    }}
  {{/form-controls}}
{{/paper-form}}
