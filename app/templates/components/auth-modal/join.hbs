{{#paper-form onSubmit=(action "submit") as |form|}}
  {{#paper-list}}
    {{#paper-subheader class="md-no-sticky"}}{{t "auth.join"}}{{/paper-subheader}}
    {{#paper-item}}
      {{form.input
        value=changeset.username
        autofocus=true
        label=(t "users.attributes.username.label")
        onChange=(action (mut changeset.username))
        errors=changeset.error.username.validation
        required="style"
        data-test-join-username-input=""
      }}
    {{/paper-item}}

    {{#paper-item}}
      {{form.input
        value=changeset.email
        type="email"
        autofocus=true
        label=(t "users.attributes.email.label")
        onChange=(action (mut changeset.email))
        errors=changeset.error.email.validation
        required="style"
        data-test-join-email-input=""
      }}
    {{/paper-item}}

    {{#paper-item}}
      {{form.input
        value=changeset.password
        type="password"
        label=(t "users.attributes.password.label")
        onChange=(action (mut changeset.password))
        errors=changeset.error.password.validation
        required="style"
        data-test-join-password-input=""
      }}
    {{/paper-item}}
  {{/paper-list}}

  {{#form-controls form=form cancel=(action "cancel")}}
    {{paper-button
      label=(t "auth.login")
      onClick=(action "login")
      classNames="form-controls-align-left"
      data-test-join-login-button=""
    }}
  {{/form-controls}}
{{/paper-form}}
