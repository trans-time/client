{{ember-webrtc-capture
  takePicture=(action "takePicture")
}}



  {{#file-dropzone name="photos" as |dropzone queue|}}
    {{#if dropzone.active}}
      {{#if dropzone.valid}}
        {{t "file.drop"}}
      {{else}}
        {{t "file.invalid"}}
      {{/if}}
    {{else if queue.files.length}}
      {{t "file.progress" length=queue.files.length progress=queue.progress}}
    {{else}}
      <h2>{{t "file.uploadImages"}}</h2>
      <p>
        {{#if dropzone.supported}}
          {{t "file.dragAndDrop"}}
        {{/if}}
        {{#file-upload name="imageFile"
                       accept="image/*"
                       multiple=true
                       onfileadd=(action "uploadImage")}}
          <a id="upload-image" tabindex=0>{{t "file.addAnImage"}}</a>
        {{/file-upload}}
      </p>
    {{/if}}
  {{/file-dropzone}}

<div class="post-form-image-carousel">
  {{#each panels as |panel|}}
    <img src={{panel.src}}>
  {{/each}}
</div>
