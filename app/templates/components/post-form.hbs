{{#paper-form classNames="post-form-form" onSubmit=(route-action "submit" changeset) as |form|}}
  <div class="post-form-main">
    {{component viewPath post=post changeset=changeset form=form uploadFileToRoute=(route-action "uploadFile")}}
  </div>

  <div class="post-form-controls main-layout-constraint">
    <a class="post-form-controls-element" {{action "transition" "text"}}>{{fa-icon "font" size=2}}</a>
    <a class="post-form-controls-element" {{action "transition" "image"}}>{{fa-icon "camera" size=2}}</a>
    <a class="post-form-controls-element" {{action (route-action "submit" changeset)}}>{{fa-icon "check" size=2}}</a>
  </div>
{{/paper-form}}
