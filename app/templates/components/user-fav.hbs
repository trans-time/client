{{#link-to "users.user.profile" user.username class="fav-item-link"}}
  <img src={{user.userProfile.avatar}} class="fav-item-avatar">
  <div class="fav-item-text">
    <div class="fav-item-username">{{user.username}}<span class="follow-item-secondary-title">{{#if user.userProfile.displayName}} ({{{inject-emoji user.userProfile.displayName}}}){{/if}}</span></div>
    <div class="fav-item-description">{{rich-text text=user.userProfile.description}}</div>
  </div>
  <div class="fav-item-fav">{{fa-icon iconType size=2 flip="horizontal"}}</div>
{{/link-to}}
