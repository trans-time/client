{{#simple-form as |form|}}
  {{paper-input
    value=changeset.username
    autofocus=true
    label=(t "users.attributes.username.label")
    onChange=(action (mut changeset.username))
    errors=changeset.error.username.validation
  }}

  {{paper-input
    value=changeset.password
    type="password"
    label=(t "users.attributes.password.label")
    onChange=(action (mut changeset.password))
    errors=changeset.error.password.validation
  }}

  {{form.controls disabled=disabled submit=(action "submit") cancel=(action "cancel")}}
{{/simple-form}}
