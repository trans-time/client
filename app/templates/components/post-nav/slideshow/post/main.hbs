<div class="post-nav-slideshow-panels">
  {{#each post.panels as |panel|}}
    {{component panel.postNavComponent
      panel=panel
      navState=navState
    }}
  {{/each}}
</div>

{{#if shouldRenderPost}}
  {{post-nav/slideshow/post/text
    post=post.model
    textExpanded=textExpanded
    isBlank=isBlank
    scrollLocked=(not-eq navState.progress 0)
    classNames="main-layout-constraint"
    expandText=expandText
    compressText=compressText
  }}

  {{post-nav/slideshow/post/controls/main
    post=post.model
    classNames="main-layout-constraint"
  }}
{{/if}}
