{{#each decoratedPosts as |post|}}
  {{post-nav/slideshow/post/main
    post=post
    navState=navState
    fullShare=fullShare
    textExpanded=textExpanded
    panelCompressed=panelCompressed
    expandText=(action "expandText")
    compressText=(action "compressText")
    removePost=(action "removePost" post)
    toggleChat=(action "toggleChat")
  }}
{{/each}}

<div class="post-nav-slideshow-pointer-container">
  {{#each-in pointers as |direction icon|}}
    {{post-nav/slideshow/pointer
      direction=direction
      icon=icon
    }}
  {{/each-in}}
</div>
