{{#each posts as |post|}}
  {{#each post.panelsWithBlank as |panel|}}
    {{component panel.postNavComponent
      panel=panel
      navState=navState
    }}
  {{/each}}
{{/each}}

<div class="post-nav-slideshow-pointer-container">
  {{#each-in pointers as |direction icon|}}
    {{post-nav/slideshow/pointer
      direction=direction
      icon=icon
    }}
  {{/each-in}}
</div>

<div class="post-nav-slideshow-quantifiables-container {{if (not quantifiablesExpanded) 'hidden'}}">
  {{#if quantifiablesExpanded}}
    {{#each post.routineInstances as |routineInstance|}}
      {{post-nav/slideshow/routine routineInstance=routineInstance}}
    {{/each}}
  {{/if}}
</div>
